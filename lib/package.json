{
  "name": "@declarative-dom/lib",
  "version": "0.1.0",
  "description": "A specification and TypeScript type system for describing DOM structure as serializable JavaScript objects.",
  "type": "module",
  "main": "dist/index.js",
  "types": "../types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./../types/src/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lib/*": {
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "debug": "NO_COLOR=true rollup -c 2>&1 | tee build.log",
    "upgrade": "npx npm-check-updates -u && npm install"
  },
  "keywords": [
    "declarative",
    "dom",
    "components",
    "spec",
    "ui",
    "typescript",
    "json",
    "data-structure"
  ],
  "author": "Avunu LLC",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "rollup": "^4.41.1",
    "tslib": "^2.8.1",
    "typescript": "^5"
  },
  "dependencies": {
    "signal-polyfill": "^0.2.2"
  }
}
