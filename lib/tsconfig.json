{
	"compilerOptions": {
		"allowImportingTsExtensions": false,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"DOM",
			"ES2022"
		],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"rootDir": "../",
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "ES2022"
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts"
	],
	"include": [
		"src/**/*",
		"../types/src/types.d.ts"
	]
}